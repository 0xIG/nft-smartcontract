{
  "name": "nft-smartcontract",
  "author": "Grigory Ivanov",
  "version": "1.0.0",
  "scripts": {
    "compile": "hardhat clean && hardhat compile",
    "compile:force": " hardhat clean && hardhat compile --force",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "check": "hardhat check",
    "coverage": "hardhat clean && hardhat coverage",
    "docs": "hardhat docgen",
    "node": "hardhat node",
    "prettier": "prettier . --write",
    "prettier:contracts": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "deploy:factory:sepolia": "hardhat ignition deploy ignition/modules/deployFactory.ts --network sepolia"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomiclabs/hardhat-solhint": "^3.1.0",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.6",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-exposed": "^0.3.15",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-docgen": "^0.6.0-beta.36"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2"
  }
}
